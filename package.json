{
  "name": "syncgo",
  "version": "1.0.0-sanbao001",
  "description": "同弈 (SyncGo) - 三宝001版 | 同步围棋商业化版本 - A revolutionary Go variant with simultaneous moves",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "mocha test/**/*.test.js --timeout 10000",
    "test:engine": "mocha test/game-engine.test.js --timeout 10000",
    "test:timer": "mocha test/timer.test.js --timeout 10000",
    "test:protocol": "mocha test/protocol.test.js --timeout 10000",
    "test:ai": "mocha test/ai-player.test.js --timeout 10000",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rm -rf dist",
    "release": "electron-builder --publish always"
  },
  "author": {
    "name": "步紧 (Bujin)",
    "email": "bujin@sanyachess.studio"
  },
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/bujin/simultaneous-go",
  "repository": {
    "type": "git",
    "url": "https://github.com/bujinwang/gogame.git"
  },
  "keywords": [
    "go",
    "weiqi",
    "围棋",
    "同步围棋",
    "simultaneous-go",
    "board-game",
    "electron",
    "p2p",
    "webrtc"
  ],
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "mocha": "^10.2.0",
    "sinon": "^21.0.1"
  },
  "dependencies": {
    "ws": "^8.16.0"
  },
  "build": {
    "appId": "com.sanyachess.syncgo",
    "productName": "同弈",
    "icon": "build/icon.icns",
    "copyright": "Copyright © 2026 三宝棋道工作室 (Sanbao Chess Studio). All rights reserved.",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.board-games"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
